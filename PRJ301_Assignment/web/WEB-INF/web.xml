<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AttandanceReportController</servlet-name>
        <servlet-class>controller.student.AttandanceReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WeeklyTimtableController</servlet-name>
        <servlet-class>controller.student.WeeklyTimtableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTimtableController</servlet-name>
        <servlet-class>controller.lecturer.LecturerTimtableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>controller.lecturer.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttandanceReportController</servlet-name>
        <url-pattern>/report/viewAttendStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WeeklyTimtableController</servlet-name>
        <url-pattern>/student/weeklytimtable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTimtableController</servlet-name>
        <url-pattern>/lecturer/lecturertimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/lecturer/takeatts</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
